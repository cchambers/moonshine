  <section id="typography">
    <h2>Typography</h2>

    <h3 id="alignment">Size and Line Height</h3>
    <table class="class-defs">
      <thead>
        <tr>
          <th>Class</th>
          <th>Effect</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>
            <code class="language-css">.pxNN</code>
          </td>
          <td>
            <ul>
              <li>
                Set the [responsive] font size of a piece of content.
              </li>
              <li>
                Options range from 10-100. ex: .px62
              </li>
            </ul>
          </td>
        </tr>
        <tr>
          <td>
            <code class="language-css">.lhNN</code>
          </td>
          <td>
            <ul>
              <li>
                Set the [responsive] line height of a piece of content.
              </li>
              <li>
                Options range from 10-100. ex: .lh30
              </li>
            </ul>
          </td>
        </tr>
      </tbody>
    </table>

