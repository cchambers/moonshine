<%- htmlWebpackPlugin.options.docsHead %>

<title><%= htmlWebpackPlugin.options.title %></title>

<div class="documentation contain">
  <h1>button</h1>
  <section id="usage">
    <h2>Usage</h2>
    <pre>
        <code class="language-html">
          &lt;sh-button&gt;
            Button Text
          &lt;/sh-button&gt;
        </code>
      </pre>
  </section>

  <section id="reference" class="baseline30">
    <h2>Reference</h2>
    <h3 id="attributes">Attributes</h3>

    <table class="attributes">
      <thead>
        <tr>
          <th>Attribute</th>
          <th>Type</th>
          <th>Description</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>variant</td>
          <td>String</td>
          <td>
            <ul>
              <li>Style variant.</li>
              <li>Defaults to 'primary'.</li>
            </ul>
          </td>
        </tr>
        <tr>
          <td>toggle</td>
          <td>Boolean</td>
          <td>
            <ul>
              <li>Make button have a toggle state.</li>
            </ul>
          </td>
        </tr>
        <tr>
          <td>round</td>
          <td>Boolean</td>
          <td>
            <ul>
              <li>Round button edges.</li>
            </ul>
          </td>
        </tr>
        <tr>
          <td>outline</td>
          <td>Boolean</td>
          <td>
            <ul>
              <li>Outlined button.</li>
            </ul>
          </td>
        </tr>
        <tr>
          <td>scale</td>
          <td>Number</td>
          <td>
            <ul>
              <li>Change the scale of the button.</li>
              <li>Options are: 120, 110, 90, 80, 70, 60, 50</li>
            </ul>
          </td>
        </tr>
      </tbody>
    </table>

    <h3 id="slots">Slots</h3>
    <table class="slots">
      <thead>
        <tr>
          <th>Slot</th>
          <th>Description</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><em>default</em></td>
          <td>
            The text content of the button.
          </td>
        </tr>
        <tr>
          <td>before-icon</td>
          <td>
            <a href="https://material.io/tools/icons/?style=baseline" target="_icons">Material Icon</a> that comes
            before the text.
          </td>
        </tr>
        <!-- <tr>
          <td>active-before-icon</td>
          <td>
            <a href="https://material.io/tools/icons/?style=baseline" target="_icons">Material Icon</a> that comes
            before the text when the 'active' prop has been toggled true.
          </td>
        </tr> -->
        <tr>
          <td>after-icon</td>
          <td>
            <a href="https://material.io/tools/icons/?style=baseline" target="_icons">Material Icon</a> that comes after
            the text.
          </td>
        </tr>
        <!-- <tr>
          <td>active-after-icon</td>
          <td>
            <a href="https://material.io/tools/icons/?style=baseline" target="_icons">Material Icon</a> that comes after
            the text when the 'active' prop has been toggled true.
          </td>
        </tr> -->
      </tbody>
    </table>

    <h3 id="events">Events</h3>

    <table class="events">
      <thead>
        <tr>
          <th>Event</th>
          <th>Payload Type</th>
          <th>Description</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>click</td>
          <td>
            String
          </td>
          <td>
            <ul>
              <li>Fires when the button is clicked.</li>
            </ul>
          </td>
        </tr>
      </tbody>
    </table>
  </section>

  <section id="examples">
    <h2>Examples</h2>

    <h3 class="margin-b-quarter">Default</h3>
    <lib-toolbar>
      <sh-button toggle>Toggle Button</sh-button>
      <sh-button>
        <i class="material-icons" slot="before-text">close</i>
        With Icon
        <i class="material-icons" slot="after-text">check</i>
      </sh-button>
      <sh-button>With Active Icon</sh-button>
    </lib-toolbar>

    
    <h3 class="margin-b-quarter" id="variants">Variants</h3>
    <lib-toolbar>
      <sh-button>Default</sh-button>
      <sh-button variant="primary">Primary</sh-button>
      <sh-button variant="secondary">Secondary</sh-button>
      <sh-button variant="tertiary">Tertiary</sh-button>
    </lib-toolbar>

    <h3 class="margin-b-quarter" id="round">Round</h3>
    <lib-toolbar>
      <sh-button round>Default</sh-button>
      <sh-button round variant="primary">Primary</sh-button>
      <sh-button round variant="secondary">Secondary</sh-button>
      <sh-button round variant="tertiary">Tertiary</sh-button>
    </lib-toolbar>

    <h3 class="margin-b-quarter">Round Values</h3>
    <lib-toolbar>
      <sh-button round="left" variant="primary">Left</sh-button>
      <sh-button round="right" variant="primary">Right</sh-button>
      <sh-button round="top" variant="primary">Top</sh-button>
      <sh-button round="bottom" variant="primary">Bottom</sh-button>
    </lib-toolbar>
        
    <h3 class="margin-b-quarter" id="variants">Outline</h3>
    <lib-toolbar>
      <sh-button outline>Default</sh-button>
      <sh-button outline variant="primary">Primary</sh-button>
      <sh-button outline variant="secondary">Secondary</sh-button>
      <sh-button outline variant="tertiary">Tertiary</sh-button>
    </lib-toolbar>

    <h3 class="margin-b-quarter" id="variants">Outline + Round</h3>
    <lib-toolbar>
      <sh-button outline round>Default</sh-button>
      <sh-button outline round variant="primary">Primary</sh-button>
      <sh-button outline round variant="secondary">Secondary</sh-button>
      <sh-button outline round variant="tertiary">Tertiary</sh-button>
    </lib-toolbar>

    <h3 class="margin-b-quarter" id="scaling">Scaling</h3>
    <lib-toolbar>
      <div class="pad-t-quarter"><sh-button scale="120">scale = 120</sh-button></div>
      <div class="pad-t-quarter"><sh-button scale="110">scale = 110</sh-button></div>
      <div class="pad-t-quarter"><sh-button>DEFAULT</sh-button></div>
      <div class="pad-t-quarter"><sh-button scale="90">scale = 90</sh-button></div>
      <div class="pad-t-quarter"><sh-button scale="80">scale = 80</sh-button></div>
      <div class="pad-t-quarter"><sh-button scale="70">scale = 70</sh-button></div>
      <div class="pad-t-quarter"><sh-button scale="60">scale = 60</sh-button></div>
      <div class="pad-t-quarter"><sh-button scale="50">scale = 50</sh-button></div>
    </lib-toolbar>
    
  </section>

  <section id="changelog">
    <h2>Changelog</h2>
    <dl>
      <dt>1.0.0</dt>
      <dd>Component was created.</dd>
    </dl>
  </section>
</div>

<%- htmlWebpackPlugin.options.docsFoot %>
