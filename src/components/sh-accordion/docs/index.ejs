<%- htmlWebpackPlugin.options.docsHead %>

<title><%= htmlWebpackPlugin.options.title %></title>

<div class="documentation contain">
  <h1>Accordion</h1>
  <section id="usage">
    <h2>Usage</h2>
    <pre>
      <code class="language-html">
          &lt;sh-accordion&gt;new component&lt;/sh-accordion&gt;
      </code>
    </pre>

  </section>

  <section id="reference" class="baseline30">
    <h2>Reference</h2>
    <h3 id="attributes">Attributes</h3>

    <table class="attributes">
      <thead>
        <tr>
          <th>Attribute</th>
          <th>Type</th>
          <th>Description</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>hidden</td>
          <td>Boolean</td>
          <td>Hide from view.</td>
        </tr>
      </tbody>
    </table>

    <h3 id="slots">Slots</h3>

    <table class="slots">
      <thead>
        <tr>
          <th>Slot</th>
          <th>Description</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>default</td>
          <td>
            Text content.
          </td>
        </tr>
      </tbody>
    </table>

    <h3 id="methods">Public Methods</h3>

    <table class="methods">
      <thead>
        <tr>
          <th>Function</th>
          <th>Params</th>
          <th>Description</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>open</td>
          <td>
            <ul>
              <li>
                none
              </li>
            </ul>
          </td>
          <td>
            Open the accordion's content.
          </td>
        </tr>
        <tr>
          <td>close</td>
          <td>
            <ul>
              <li>
                none
              </li>
            </ul>
          </td>
          <td>
            Close the accordion's content.
          </td>
        </tr>
      </tbody>
    </table>

    <h3 id="events">Events</h3>

    <table class="events">
      <thead>
        <tr>
          <th>Event Name</th>
          <th>Payload</th>
          <th>Description</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>accordion-opening</td>
          <td>
            this
          </td>
          <td>
            Fires before accordion opens.
          </td>
        </tr>
        <tr>
          <td>accordion-opened</td>
          <td>
            this
          </td>
          <td>
            Fires after accordion opens.
          </td>
        </tr>
        <tr>
          <td>accordion-closing</td>
          <td>
            this
          </td>
          <td>
            Fires before accordion closes.
          </td>
        </tr>
        <tr>
          <td>accordion-closed</td>
          <td>
            this
          </td>
          <td>
            Fires after accordion closes.
          </td>
        </tr>
        <tr>
          <td>accordion-trigger</td>
          <td>
            this
          </td>
          <td>
            Use this event to activate an accordion remotely.
          </td>
        </tr>
      </tbody>
    </table>
  </section>

