<%- htmlWebpackPlugin.options.docsHead %>

<title><%= htmlWebpackPlugin.options.title %></title>

<div class="documentation contain">
  <h1>Popper</h1>
  <section id="usage">
    <h2>Usage</h2>
    <pre>
      <code class="language-html">
        &lt;sh-popper&gt;
          &lt;span slot="reference"&gt;
            Hover me!
          &lt;/span&gt;
          &lt;div slot="content"&gt;
            Something interesting.
          &lt;/div&gt;
        &lt;/sh-popper&gt;
      </code>
    </pre>
  </section>

  <section id="reference" class="baseline30">
    <h2>Reference</h2>
    <h3 id="attributes">Attributes</h3>

    <table class="attributes">
      <thead>
        <tr>
          <th>Attribute</th>
          <th>Type</th>
          <th>Description</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>has-curtain</td>
          <td>Boolean</td>
          <td>Show overlay when popper is active.</td>
        </tr>
        <tr>
          <td>trigger</td>
          <td>String</td>
          <td>
            <ul>
              <li>
                Configures the default trigger mode for this popper.
              </li>
              <li>Options are <code>hover</code> and <code>click</code></li>
              <li>Defaults to <code>hover</code></li>
            </ul>
          </td>
        </tr>
      </tbody>
    </table>

    <h3 id="slots">Slots</h3>

    <table class="slots">
      <thead>
        <tr>
          <th>Slot</th>
          <th>Description</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>reference</td>
          <td>
            Trigger element.
          </td>
        </tr>
        <tr>
          <td>content</td>
          <td>
            Popper content.
          </td>
        </tr>
      </tbody>
    </table>

