  <section id="examples">
    <h2>Examples</h2>
    <h3>Default</h3>
    <lib-toolbar>
      <sh-popper reference-id="someid">
        <span slot="reference">Hover here!</span>
        <div slot="content">
          This is the content!
        </div>
      </sh-popper>
    </lib-toolbar>

    <h3>Click Trigger</h3>
    <lib-toolbar>
      <sh-popper trigger="click">
        <div slot="content">
          This is the content!
        </div>
        <span slot="reference">Click here!</span>
      </sh-popper>
    </lib-toolbar>
